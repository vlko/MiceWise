@functions {

	public static void RegisterValidationJs(System.Web.Mvc.HtmlHelper html)
	{
		vlko.core.HtmlExtender.ScriptManager.ScriptInclude(html,
														   "http://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.min.js",
														   fallbackFile: "~/Scripts/jquery.validate.js", async: false);
		vlko.core.HtmlExtender.ScriptManager.ScriptInclude(html,
														   "~/Scripts/jquery.validate.unobtrusive.custom.js", async: false);
	}

}
